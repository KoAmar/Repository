@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
  ViewData["Title"] = "Список ролей";
}
<h1>Список ролей</h1>
<table class="table">
  @foreach (var role in Model)
  {
    <tr>
      <td>@role.Name</td>
      <td>
        <a class="btn btn-sm btn-info" asp-controller="Users" asp-action="FilterIndex" asp-route-roleId="@role.Id">
          Поользователи с ролью
        </a>
      </td>
      <td>
        @if (role.Name != "Admin" && role.Name != "Teacher" && role.Name != "Student")
        {
          <form asp-action="Delete" asp-route-id="@role.Id" method="post">
            <button type="submit" class="btn btn-sm btn-danger">
              Удалить
            </button>
          </form>
        }
      </td>
    </tr>
  }
</table>
<a asp-action="Create">Добавить роль</a> | <a asp-controller="Users" asp-action="Index">Список пользователей</a>