@model List<Repository.Models.DatabaseModels.Discipline>
@{
  ViewData["Title"] = "Список дисциплин";
}
<h1>Список дисциплин</h1>
<table class="table">
  @foreach (var discipline in Model)
  {
    <tr>
      <td>@discipline.Name</td>
      @* <td> *@
      @*   @if (discipline.Name != "Admin" && discipline.Name != "Teacher" && discipline.Name != "Student") *@
      @*   { *@
      @*     <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@discipline.Id"> *@
      @*       Поользователи с ролью *@
      @*     </a> *@
      @*   } *@
      @* </td> *@
      <td>

        @if (discipline.Name != "Admin" && discipline.Name != "Teacher" && discipline.Name != "Student")
        {
          <a asp-action="Edit" asp-route-id="@discipline.Id" class="btn btn-sm btn-info">
            Изменить
          </a>
        }
      </td>
      <td>
        @if (discipline.Name != "Admin" && discipline.Name != "Teacher" && discipline.Name != "Student")
        {
          <form asp-action="Delete" asp-route-id="@discipline.Id" method="post">
            <button type="submit" class="btn btn-sm btn-danger">
              Удалить
            </button>
          </form>
        }
      </td>

    </tr>
  }
</table>
<br>
@if (User.IsInRole("Admin") || User.IsInRole("Teacher"))
{
  <a asp-action="Create">Добавить</a>
}