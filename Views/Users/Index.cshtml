@model IEnumerable<Repository.Models.DatabaseModels.User>
@{
  ViewBag.Title = "Список пользователей";
}

<a asp-action="Create">Добавить пользователя</a>

<table class="table">
  <tr>
    <th>Email</th><th>Год</th><th></th>
  </tr>
  @foreach (var user in Model)
  {
    <tr>
      <td>@user.Email</td>
      <td>@user.Year</td>
      <td>
        <form asp-action="Delete" asp-route-id="@user.Id" method="post">
          <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@user.Id">Изменить данные</a>
          <a class="btn btn-outline-warning" asp-action="AdminChangePassword" asp-route-id="@user.Id">Сменить пароль</a>
          <a class="btn btn-outline-warning" 
             asp-controller="Roles" asp-action="Edit" asp-route-userid="@user.Id">Права доступа</a>

          <button type="submit" class="btn btn-danger">
            Удалить
          </button>
        </form>
      </td>
    </tr>
  }
</table>