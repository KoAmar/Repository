@model Repository.ViewModels.LoginViewModel

@{
  ViewData["Title"] = "Вход в приложение";
}

<h2>Вход в приложение</h2>

<form method="post">
  <div class="row justify-content-around my-5">
    <div class="col-md-8">
      <div asp-validation-summary="All" class="text-danger"></div>
      <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control"/>
        <span asp-validation-for="Email" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control"/>
        <span asp-validation-for="Password" class="text-danger"></span>
      </div>
      <div class="row justify-content-between mt-4 px-3">

        <div class="custom-control custom-checkbox">
          <input type="checkbox"
                 class="custom-control-input"
                 asp-for="@Model.RememberMe">
          <label class="custom-control-label"
                 asp-for="@Model.RememberMe">
            Запомнить меня?
          </label>
        </div>
        <a asp-controller="Account" asp-action="Register">Регистрация</a>
        <a asp-controller="Account" asp-action="ForgotPassword">Забыли пароль?</a>
      </div>

    </div>
  </div>
  <div class="row justify-content-center">
    <button type="submit" class="btn btn-primary mt-5" style="min-width: 15rem">Войти</button>
  </div>


</form>